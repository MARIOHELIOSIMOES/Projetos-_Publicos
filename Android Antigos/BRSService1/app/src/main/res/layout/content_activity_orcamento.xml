<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simoes.mario.brsservice.Interface.Activity_Orcamento"
    tools:showIn="@layout/activity_orcamento">


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">

               <android.support.v7.widget.CardView
                   android:layout_margin="2dp"
                   android:padding="@dimen/padding4dp"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:text="Tipo"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo"/>
                           <TextView
                               android:id="@+id/txtTipoVeiculo"
                               android:text="Carro"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:orientation="vertical"
                               android:layout_height="match_parent">
                               <TextView
                                   android:text="Marca"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/FundoTitulo"
                                   android:textColor="@color/LetraTitulo"/>
                               <TextView
                                   android:id="@+id/txtMarcaVeiculo"
                                   android:text="Volkswagem"
                                   android:layout_weight="1"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" />
                           </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:text="Modelo"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo" />
                           <TextView
                               android:id="@+id/txtModeloVeiculo"
                               android:text="Gol"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1.3"
                           android:layout_width="match_parent"
                           android:orientation="vertical"

                           android:layout_height="match_parent">
                           <TextView
                               android:text="Ano"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo"/>
                           <TextView
                               android:id="@+id/txtAnoVeiculo"
                               android:text="2017"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>

                   </LinearLayout>
               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:id="@+id/cardviewOrcamento"
                   android:layout_margin="2dp"
                   android:padding="@dimen/padding4dp"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_weight="1.3"
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:text="Litragem"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo"/>
                           <TextView
                               android:id="@+id/txtListragem"
                               android:text="3 lts"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:text="Óleo"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo"/>
                           <TextView
                               android:id="@+id/txtOleoMotorVeiculo"
                               android:text="sw40"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                       <LinearLayout
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="match_parent">
                           <TextView
                               android:text="Combustível"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:background="@color/FundoTitulo"
                               android:textColor="@color/LetraTitulo" />
                           <TextView
                               android:id="@+id/txtCombustivel"
                               android:text="Gasolina"
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                       </LinearLayout>
                   </LinearLayout>
               </android.support.v7.widget.CardView>

               <android.support.v7.widget.CardView
                   android:layout_margin="2dp"
                   android:padding="@dimen/padding4dp"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/txtTotalOrcamento"
                       android:background="@color/colorPrimary"
                       android:textColor="@color/Branco"
                       android:gravity="center_horizontal"
                       android:text="Total R$ xxx,xx"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
               </android.support.v7.widget.CardView>


               <include layout="@layout/checklist"/>

           </LinearLayout>


</android.support.v4.widget.NestedScrollView>
